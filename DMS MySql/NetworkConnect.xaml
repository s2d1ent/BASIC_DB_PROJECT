<Window x:Class="DMS_MySql.NetworkConnect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMS_MySql"
        mc:Ignorable="d"
        Title="NetworkConnect" Height="550" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" SizeToContent="Manual" Background="White" Foreground="#FFF2F2F2" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"></ColumnDefinition>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="75*"></ColumnDefinition>
            <ColumnDefinition Width="75*"></ColumnDefinition>
            <ColumnDefinition Width="75*"></ColumnDefinition>
            <ColumnDefinition Width="75*"></ColumnDefinition>
            <ColumnDefinition Width="75*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="8" HorizontalAlignment="Left" Height="20" Margin="0,0,0,0" Grid.RowSpan="1" VerticalAlignment="Top" Width="450" Background="White">
        <MenuItem Header="File">
            <MenuItem Header="Open"></MenuItem>
            <MenuItem Header="Save" ></MenuItem>
            <MenuItem x:Name="Menu_Item_Settings" Header="Settings"></MenuItem>
            <MenuItem x:Name="Menu_Item_Exit" Header="Exit" ></MenuItem>
        </MenuItem>
        <MenuItem Header="Edit" ></MenuItem>
        <MenuItem Header="Connect">
            <MenuItem x:Name="Menu_Item_Save" Header="Save config"></MenuItem>
            <MenuItem x:Name="Menu_Item_Load" Header="Load config"></MenuItem>
            <MenuItem x:Name="History_connection" Header="History">

            </MenuItem>
        </MenuItem>
        <MenuItem Header="Reference">
                <MenuItem x:Name="Menu_Item_License" Header="License Agreement"></MenuItem>
                <MenuItem x:Name="Menu_Item_Update" Header="Check Update"></MenuItem>
                <MenuItem x:Name="Menu_Item_About" Header="About"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="7" HorizontalAlignment="Center" FontSize="24 " Text="Enter your MySql data" Foreground="Black" ></TextBlock>
        <TextBox Name="Host" Text="" Grid.Row="1" Margin="0 60 0 0" Grid.Column="3" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="35" Background="#F2F2F2" BorderThickness="0" FontSize="14" FontFamily="Arial"></TextBox>
        <TextBox Name="Username" Text="" Grid.Row="2" Margin="0 20 0 0" Grid.Column="3" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="35" Background="#F2F2F2" BorderThickness="0" FontSize="14" FontFamily="Arial"></TextBox>
        <TextBox Name="Port" Text="" Grid.Row="2" Margin="0 80 0 0" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="35" Background="#F2F2F2" BorderThickness="0" FontSize="14" FontFamily="Arial"></TextBox>
        <TextBox Name="Password" Text="" Grid.Row="3" Margin="0 40 0 0" Grid.Column="3" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="35" Background="#F2F2F2" BorderThickness="0" FontSize="14" FontFamily="Arial"></TextBox>
        <TextBox Name="Database" Text="" Grid.Row="3" Margin="0 90 0 0" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="35" Background="#F2F2F2" BorderThickness="0" FontSize="14" FontFamily="Arial"></TextBox>
        <Button x:Name="Button_Network_Back" Content="←" FontWeight="Bold" Grid.Row="4" Grid.Column="3" Margin="0 0 0 0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="35" Height="35" BorderThickness="0" Background="#f2f2f2"></Button>
        <Button x:Name="Button_connect_NetworkConnect" Content="Connect" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="4" VerticalAlignment="Bottom" Width="100" Height="35" FontSize="14" FontWeight="Bold" Background="#F2F2F2" BorderThickness="0"></Button>
        <TextBlock Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="7" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="10" Text="All rights and a little left are reserved by LazyCote©" Foreground="Black" ></TextBlock>
    </Grid>
</Window>
